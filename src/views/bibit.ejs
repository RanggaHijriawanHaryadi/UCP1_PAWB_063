<!-- views/bibit.ejs -->
<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Halaman Bibit</title>

</head>

<body>
    <header>
        <h3>Halaman Bibit</h3>
    </header>

    <form action="/bibit/" method="POST">
        <label for="nama_bibit">Nama Bibit:</label>
        <input type="text" id="nama_bibit" name="nama_bibit" required>

        <label for="jenis_bibit">Jenis Bibit:</label>
        <input type="text" id="jenis_bibit" name="jenis_bibit" required>

        <label for="harga">Harga:</label>
        <input type="number" id="harga" name="harga" required>

        <button type="submit">Tambah Bibit</button>
    </form>


    <h5>Daftar Bibit:</h5>
    <ul>
        <% bibitList.forEach(bibit=> { %>
            <li>
                <%= bibit.nama_bibit %> - <%= bibit.jenis_bibit %> - Rp <%= bibit.harga %>
                            <!-- Button for editing -->
                            <a href="/bibit/edit/<%= bibit.id %>">
                                <button>Edit</button>
                            </a>
                            <!-- Button for deleting -->
                            <a href="/bibit/delete/<%= bibit.id %>">
                                <button>Hapus</button>
                            </a>
            </li>
            <% }) %>
    </ul>

    <ui>
        <li><a href="/">
                <button>kembali</button>
            </a></li>
    </ui>

</body>

</html>