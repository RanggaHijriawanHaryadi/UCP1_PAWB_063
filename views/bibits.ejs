<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Kontak</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Daftar Kontak</h1>

        <div class="mb-3">
            <a href="/bibit" class="btn btn-secondary">Kembali</a>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nama</th>
                    <th>Email</th>
                    <th>Pesan</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if (contacts && contacts.length > 0) { %>
                    <% contacts.forEach((contact, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= contact.nama %></td>
                            <td><%= contact.email %></td>
                            <td><%= contact.message %></td>
                            <td>
                                <!-- Tombol Update -->
                                <form action="/contacts/update/<%= contact.id %>" method="POST" class="d-inline">
                                    <input type="hidden" name="_method" value="PUT">
                                    <button type="submit" class="btn btn-warning btn-sm">Update</button>
                                </form>
                                
                                
                                <!-- Tombol Delete -->
                                <form action="/contacts/delete/<%= contact.id %>" method="POST" class="d-inline">
                                    <input type="hidden" name="_method" value="DELETE"> <!-- Override method to DELETE -->
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                            
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center">Tidak ada data kontak.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>
